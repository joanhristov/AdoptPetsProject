@model IndexViewModel

@{
    ViewData["Title"] = "Give them a family";
}

@{
    var pets = Model.Pets;
    var firstPet = pets.Any() ? pets[0] : null;
    var secondPet = pets.Count > 1 ? pets[1] : null;
    var thirdPet = pets.Count > 2 ? pets[2] : null;
}

@if (!pets.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place to give a family to pets!</h1>
        <p class="lead">No pets are waiting for adoption so why don't you add some.</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Pets" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add pet</a>
        </p>
    </div>
}

<div id="carouselExampleIndicators" class="carousel slide mt-3" data-intervar="50000" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @if (firstPet != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstPet.ImageUrl" alt="@firstPet.Breed @firstPet.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Pets" asp-action="Details" asp-route-id="@firstPet.Id">@firstPet.Breed @firstPet.Name - @firstPet.Age</a></h5>
                </div>
            </div>
        }
        @if (secondPet != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondPet.ImageUrl" alt="@secondPet.Breed @secondPet.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Pets" asp-action="Details" asp-route-id="@secondPet.Id">@secondPet.Breed @secondPet.Name - @secondPet.Age</a></h5>
                </div>
            </div>
        }
        @if (thirdPet != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdPet.ImageUrl" alt="@thirdPet.Breed @thirdPet.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Pets" asp-action="Details" asp-route-id="@thirdPet.Id">@thirdPet.Breed @thirdPet.Name - @thirdPet.Age</a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="mb-5"></div>

<div class="jumbotron">
    <div class="row">
        <h2 class="col-md-4 text-center">
            @Model.TotalPets Pets
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalUsers Users
        </h2>
        <h2 class="col-md-4 text-center">
            @Model.TotalAdoptions Adoptions
        </h2>
    </div>
</div>