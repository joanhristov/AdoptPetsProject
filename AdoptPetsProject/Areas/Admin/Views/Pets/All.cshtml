@using AdoptPetsProject.Infrastructure

@model IEnumerable<PetServiceModel>

@{
    ViewData["Title"] = "Pets Administration";
}

<h1>All pets</h1>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Breed</th>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Kind</th>
      <th scope="col">Approved</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                <td scope="col">@pet.Id</td>
                <td scope="col">@pet.Breed</td>
                <td scope="col">@pet.Name</td>
                <td scope="col">@pet.Age</td>
                <td scope="col">@pet.KindName</td>
                <td scope="col">@(pet.IsPublic ? "Yes" : "No")</td>
                <td scope="col">
                    <a asp-area="" asp-controller="Pets" asp-action="Details" asp-route-id="@pet.Id" asp-route-information="@pet.GetInformation()" class="btn btn-primary float-right ml-3">View</a>
                    <a asp-area="Admin" asp-controller="Pets" asp-action="ChangeVisibility" asp-route-id="@pet.Id" class="btn btn-info float-right ml-3">@(pet.IsPublic ? "Hide" : "Show")</a>
                    <a asp-area="" asp-controller="Pets" asp-action="Edit" asp-route-id="@pet.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="" asp-controller="Pets" asp-action="Delete" asp-route-id="@pet.Id" class="btn btn-danger float-right ml-3">Delete</a>
                </td>
            </tr>
        }
  </tbody>
</table>